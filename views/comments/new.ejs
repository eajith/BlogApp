<% include ../partials/header %>

<div class="container">
	<h1 style="text-align: center">Add comments to <%= campground.name %> </h1>
	<div style="width: 30%; margin:20px auto">
		<form action="/campground/<%= campground._id %>/comments" method="post">
			<div class="form-group"><input class="form-control" type="text" name="comment[text]" placeholder="enter the comment"></div>
			<div class="form-group"><button class="btn btn-lg btn-info btn-block" type="submit">Click to Add</button></div>
						
		</form>
		<a href="/campground">GO BACK</a>
	</div>
</div>
