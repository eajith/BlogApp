<% include ../partials/header %>

<div class="container">
	<h1 style="text-align: center">Edit <%= campground.name%> </h1>
	<div style="width: 30%; margin:20px auto">
		<form action="/campground/<%= campground.id%>?_method=PUT" method="post">
			<div class="form-group"><input class="form-control" type="text" name="name" value=<%=campground.name%> ></div>
			<div class="form-group"><input class="form-control" type="text" name="price" value=<%=campground.price%> ></div>
			<div class="form-group"><input class="form-control" type="text" name="image" value=<%=campground.image%> ></div>
			<div class="form-group"><input class="form-control" type="text" name="description" value=<%=campground.description%> ></div>
			 <div class="form-group">
			    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
			</div>

			<div class="form-group"><button class="btn btn-lg btn-info btn-block" type="submit">Click to Add</button></div>
						
		</form>
		<a href="/campground">GO BACK</a>
	</div>
</div>
<% include ../partials/footer %>